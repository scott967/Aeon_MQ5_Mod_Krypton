<?xml version="1.0" encoding="UTF-8"?>
	<!-- Aeon MQ 5 Helix 6.1.0 6.1.1 -->
	<!-- Jarvis 8.1.13/8.1.14 -->
	<!-- Krypton 9.2.1 window IDs 111 -->

<window type="dialog">
	<defaultcontrol always="true">4112</defaultcontrol>
	<coordinates>
		<system>1</system>
		<posx>0</posx>
		<posy>0</posy>
	</coordinates>
<!-- 	<zorder>4</zorder> -->
	<controls>
		<control type="group">
			<include>Animation_DialogPopup</include>
			<control type="image">
				<posx>410</posx>
				<posy>130</posy>
				<width>454</width>
				<height>39</height>
				<texture>gradient_focus.png</texture>
				<colordiffuse>$VAR[value_headercolor]</colordiffuse>
			</control>
			<control type="image">
				<posx>410</posx>
				<posy>100</posy>
				<width>454</width>
				<height>39</height>
				<texture>dialogs_context_nofocus.png</texture>
				<colordiffuse>F9FFFFFF</colordiffuse>
			</control>
			<control type="label">
				<posx>490</posx>
				<posy>108</posy>
				<width>300</width>
				<height>40</height>
				<align>center</align>
				<label>31177</label>
				<font>Font_20</font>
				<textcolor>$VAR[value_headercolor]</textcolor>
			</control>
			<control type="list" id="4112">
				<posx>410</posx>
				<posy>150</posy>
				<width>454</width>
				<height>450</height>
				<onleft>Dialog.Close(shutdownmenu)</onleft>
				<onright>Dialog.Close(shutdownmenu)</onright>
				<orientation>vertical</orientation>
				<pagecontrol>-</pagecontrol>
				<scrolltime>300</scrolltime>
				<focusposition>0</focusposition>
				<itemlayout height="39" width="454">
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>454</width>
						<height>39</height>
						<texture>dialogs_context_nofocus.png</texture>
					</control>
					<control type="label">
						<posx>12</posx>
						<posy>0</posy>
						<height>39</height>
						<width>430</width>
						<align>center</align>
						<aligny>center</aligny>
						<font>Font_18</font>
						<label>[UPPERCASE]$INFO[ListItem.Label][/UPPERCASE]</label>
						<textcolor>FFFFFAF0</textcolor>
					</control>
				</itemlayout>
				<focusedlayout height="39" width="454">
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>454</width>
						<height>39</height>
						<texture>dialogs_context_focus.png</texture>
					</control>
					<control type="label">
						<left>12</left>
						<posx>227</posx>
						<posy>0</posy>
						<height>39</height>
						<width>430</width>
						<align>center</align>
						<aligny>center</aligny>
						<font>Font_18</font>
						<label>[UPPERCASE]$INFO[ListItem.Label][/UPPERCASE]</label>
						<textcolor>FF101010</textcolor>
					</control>
				</focusedlayout>
				<content>
					<item id="1"><!-- Shutdown -->
						<label>31144</label>
						<onclick>XBMC.ShutDown()</onclick>
					</item>
					<item id="2"><!-- Presets do menu principal -->
						<label>31165</label>
						<onclick>Dialog.Close(shutdownmenu)</onclick>
						<onclick>ActivateWindow(630)</onclick>  <!-- custom presets -->
						<visible>![IsEmpty(skin.string(preset1.on)) + IsEmpty(skin.string(preset2.on)) + IsEmpty(skin.string(preset3.on)) + IsEmpty(skin.string(preset4.on)) + IsEmpty(skin.string(preset5.on)) + IsEmpty(skin.string(preset6.on)) + IsEmpty(skin.string(preset7.on)) + IsEmpty(skin.string(preset8.on)) + IsEmpty(skin.string(preset9.on)) + IsEmpty(skin.string(preset10.on))] + Window.IsVisible(home)</visible>
					</item>
					<item id="15"><!-- Settings -->
						<label>31011</label>
						<onclick>Dialog.Close(shutdownmenu)</onclick>
						<onclick>ActivateWindow(settings)</onclick>
					</item>
					<item id="3"><!-- Home Visualiser Video -->
						<label>$VAR[value_buttonmenu_video]</label>
						<onclick>Skin.Togglesetting(homevisvideo)</onclick>
						<visible>Window.IsActive(home)</visible>
					</item>
					<item id="4"><!-- Home Visualiser Audio -->
						<label>$VAR[value_buttonmenu_audio]</label>
						<onclick>Skin.Togglesetting(homevisaudio)</onclick>
						<visible>Window.IsActive(home)</visible>
					</item>
					<item id="5"><!-- Now Playing - Playlist -->
						<label>31035</label>
						<!-- <icon>icon_button_nowplaying.png</icon> -->
						<onclick>Dialog.Close(shutdownmenu)</onclick>
						<onclick condition="Player.HasAudio">ActivateWindow(musicplaylist)</onclick>
						<onclick condition="Player.HasVideo">ActivateWindow(videoplaylist)</onclick>
					</item>
					<item id="12"><!-- Eject Tray -->
						<label>31742</label>
						<onclick>EjectTray</onclick>
					</item>
					<item id="13"><!-- File Manager -->
						<label>10003</label>
						<onclick>Dialog.Close(shutdownmenu)</onclick>
						<onclick>ActivateWindow(filemanager)</onclick>
					</item>
					<item id="14"><!-- Favourites -->
						<label>1036</label>
						<onclick>Dialog.Close(shutdownmenu)</onclick>
						<onclick>ActivateWindow(Favourites)</onclick>
					</item>
				</content>
			</control>
		</control>
	</controls>
</window>